% defining the aspect of the frame title
% Frame title
% {bjut} is the name of template

\definecolor{BGColor}{RGB}{0, 151, 230}
\defbeamertemplate*{frametitle}{bjut}[1][]
{
  
  \begin{beamercolorbox}[wd=\paperwidth,ht=1.2cm]{frametitle} 
  \pgfdeclarelayer{background layer}
  \pgfdeclarelayer{foreground layer}
  \pgfsetlayers{background layer,main,foreground layer}

  \begin{tikzpicture}
  \useasboundingbox[fill=BGColor](0,0) rectangle(\the\paperwidth,1.2);
  
  % \fill[BGColor] (0,0) rectangle(\paperwidth,1.2); 
   \ifx\insertframesubtitle\@empty%
      {\node[anchor=west, white,font=\large] (Head) at (0.15,0.61){\insertframetitle};
      \node (myimage) at (\paperwidth -16, 0.6){\includegraphics[width=1cm]{logo/Bjut_logowhite.png}};
      }
      \else%
      {\node[anchor= west, white,font=\large] (Head) at (0.15,0.81){\insertframetitle};%
       \node[anchor= west, white,font=\small] (Subhead) at (0.15,0.41){\insertframesubtitle};
       \node (myimage) at (\paperwidth -16, 0.6){\includegraphics[width=1cm]{logo/Bjut_logowhite.png}};
       }%
      \fi
  \end{tikzpicture}
  \end{beamercolorbox}
}

